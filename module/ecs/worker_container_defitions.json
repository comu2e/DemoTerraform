[
    {
        "name": "worker",
        "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${name}-worker:${tag}",
        "portMappings": [
            {
                "containerPort": 6379,
                "hostPort": 6379,
                "protocol": "tcp"
            }
        ],
        "mountPoints": [
            {
                "sourceVolume": "app-storage",
                "containerPath": "/app"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-group": "/${name}-worker/ecs",
                "awslogs-stream-prefix": "${name}-worker"
            }
        },
        "environment": [
            {
                "name": "APP_ENV",
                "value": "development"
            },
            {
                "name": "APP_DEBUG",
                "value": "true"
            },
            {
                "name": "APP_SCHEME",
                "value": "https"
            },
            {
                "name": "APP_NAME",
                "value": "SED_APP_NAME"
            },
            {
                "name": "LOG_CHANNEL",
                "value": "stderr"
            },
            {
                "name": "DB_CONNECTION",
                "value": "pgsql"
            },
            {
                "name": "SESSION_DRIVER",
                "value": "redis"
            },
            {
                "name": "CACHE_DRIVER",
                "value": "redis"
            },
            {
                "name": "QUEUE_CONNECTION",
                "value": "redis"
            },
            {
                "name": "AWS_DEFAULT_REGION",
                "value": "ap-northeast-1"
            },
            {
                "name": "AWS_SES_DEFAULT_REGION",
                "value": "ap-northeast-1"
            },
            {
                "name": "AWS_BUCKET",
                "value": "SED_APP_NAME-prod"
            }
        ],
        "secrets": [
            {
                "name": "APP_KEY",
                "valueFrom": "APP_KEY"
            },
            {
                "name": "AWS_ACCESS_KEY_ID",
                "valueFrom": "ACCESS_KEY_ID"
            },
            {
                "name": "AWS_SECRET_ACCESS_KEY",
                "valueFrom": "SECRET_ACCESS_KEY"
            },
            {
                "name": "AWS_SES_ACCESS_KEY_ID",
                "valueFrom": "ACCESS_KEY_ID"
            },
            {
                "name": "AWS_SES_SECRET_ACCESS_KEY",
                "valueFrom": "SECRET_ACCESS_KEY"
            },
            {
                "name": "DB_HOST",
                "valueFrom": "DB_HOST"
            },
            {
                "name": "DB_DATABASE",
                "valueFrom": "DB_DATABASE"
            },
            {
                "name": "DB_USERNAME",
                "valueFrom": "DB_USERNAME"
            },
            {
                "name": "DB_PASSWORD",
                "valueFrom": "DB_PASSWORD"
            },
            {
                "name": "REDIS_HOST",
                "valueFrom": "REDIS_HOST_TEST"
            }
        ]
    }
]