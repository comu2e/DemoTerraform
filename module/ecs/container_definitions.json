[
    {
        "name": "nginx",
        "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${name}-nginx:${tag}",
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
            }
        ],
        "mountPoints": [
            {
                "sourceVolume": "app-storage",
                "containerPath": "/app"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-group": "/${name}/${entry_container_name}/ecs",
                "awslogs-stream-prefix": "${name}-nginx"
            }
        }
    },
    {
        "name": "app",
        "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${name}-app:${tag}",
        "mountPoints": [
            {
                "sourceVolume": "app-storage",
                "containerPath": "/app"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-group": "/${name}/${entry_container_name}/ecs",
                "awslogs-stream-prefix": "${name}-app"
            }
        },
        "environment": [
            {
                "name": "APP_ENV",
                "value": "production"
            },
            {
                "name": "LOG_CHANNEL",
                "value": "stderr"
            },
            {
                "name": "SESSION_DRIVER",
                "value": "redis"
            },
            {
                "name": "CACHE_DRIVER",
                "value": "redis"
            },
            {
                "name": "QUEUE_CONNECTION",
                "value": "redis"
            },
            {
                "name": "REDIS_SCHEME",
                "value": "tls"
            }
        ],
        "secrets": [
            {
                "name": "APP_KEY",
                "valueFrom": "APP_KEY"
            },
            {
                "name": "REDIS_HOST",
                "valueFrom": "REDIS_HOST"
            }
        ]
    }
]