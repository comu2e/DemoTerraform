[
    {
        "name": "worker",
        "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${name}-app:${tag}",
        "command": [
            "php",
            "artisan",
            "queue:work",
            "--tries=1"
        ],
        "managedAgents": [
            {
                "lastStartedAt": "2021-03-01T14:49:44.574000-06:00",
                "name": "ExecuteCommandAgent",
                "lastStatus": "RUNNING"
            }
        ],
        "mountPoints": [
            {
                "sourceVolume": "app-storage",
                "containerPath": "/app"
            }
        ],
        "portMappings": [
            {
                "containerPort": 6379,
                "hostPort": 6379,
                "protocol": "tcp"
            }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "${region}",
                "awslogs-group": "/${name}/worker",
                "awslogs-stream-prefix": "ecs"
            }
        },
        "healthCheck": {
            "command": [
                "CMD-SHELL",
                "sh health.sh|| exit 1"
            ],
            "timeout": 5,
            "retries": 3
        },
        "environment": [
            {
                "name": "APP_ENV",
                "value": "production"
            },
            {
                "name": "LOG_CHANNEL",
                "value": "stderr"
            },
            {
                "name": "SESSION_DRIVER",
                "value": "redis"
            },
            {
                "name": "CACHE_DRIVER",
                "value": "redis"
            },
            {
                "name": "QUEUE_CONNECTION",
                "value": "redis"
            }
        ],
        "secrets": [
            {
                "name": "APP_KEY",
                "valueFrom": "APP_KEY"
            },
            {
                "name": "REDIS_HOST",
                "valueFrom": "REDIS_HOST"
            },
            {
                "name": "DB_HOST",
                "valueFrom": "DB_HOST"
            },
            {
                "name": "DB_DATABASE",
                "valueFrom": "DB_NAME"
            },
            {
                "name": "DB_USERNAME",
                "valueFrom": "DB_USERNAME"
            },
            {
                "name": "DB_PASSWORD",
                "valueFrom": "DB_PASSWORD"
            }
        ]
    }
]